{
  "name": "ntask-api",
  "version": "1.0.0",
  "description": "API de gestão de tarefas",
  "main": "index.js",
  "scripts": {
    "start": "npm run apidoc && npm run clusters",
    "clusters": "babel-node clusters.js",
    "pretest": "xo",
    "test": "NODE_ENV=test mocha test/**/*.js",
    "apidoc": "apidoc -i routes/ -o public/apidoc"
  },
  "author": "Caio Ribeiro Pereira",
  "apidoc": {
    "name": "Documentação - Node Task API"
  },
  "dependencies": {
    "babel": "^5.8.23",
    "bcrypt": "^0.8.5",
    "body-parser": "^1.13.3",
    "compression": "^1.6.0",
    "consign": "^0.1.2",
    "cors": "^2.7.1",
    "express": "^4.13.3",
    "file-stream-rotator": "0.0.6",
    "helmet": "^0.12.0",
    "jwt-simple": "^0.3.1",
    "morgan": "^1.6.1",
    "passport": "^0.3.0",
    "passport-jwt": "^1.2.1",
    "sequelize": "^3.9.0",
    "sqlite3": "^3.1.0"
  },
  "devDependencies": {
    "apidoc": "^0.13.1",
    "babel-runtime": "^5.8.25",
    "chai": "^3.3.0",
    "mocha": "^2.3.3",
    "passport-stub": "^1.0.1",
    "supertest": "^1.1.0",
    "xo": "^0.9.0"
  },
  "xo": {
    "envs": [
      "es6",
      "node"
    ],
    "esnext": true,
    "ignores": [
      "public/apidoc/**"
    ],
    "rules": {
      "global-require": 0,
      "no-unused-vars": [2, { "args": "none" }],
      "camelcase": [2, {"properties": "never"}],
      "quotes": [2, "double"],
      "indent": [2, 2],
      "arrow-parens": [2, "as-needed"]
    }
  }
}
